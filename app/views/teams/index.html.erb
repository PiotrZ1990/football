<div class="container text-center">
<h1>Teams</h1>

<%= link_to 'New Team', new_team_path, class: 'btn btn-primary' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>League</th>
      <th>City</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.league.name %></td>
        <td><%= team.location %></td>
        <td>
          <%= link_to 'Show', team, class: 'btn btn-secondary' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>